\begin_layout Plain Layout

[Berry-Esseen]
\end_layout

\end_inset

Let 
\begin_inset Formula $Q_{1},\dots,Q_{n}$
\end_inset

 be independent random variables with common distribution 
\begin_inset Formula $Q$
\end_inset

, such that 
\begin_inset Formula $\E Q=0$
\end_inset

, 
\begin_inset Formula $\E Q^{2}=1$
\end_inset

 and 
\begin_inset Formula $\E\left|Q\right|^{3}<\infty$
\end_inset

.
 Let 
\begin_inset Formula 
\[
\X=\frac{1}{\sqrt{n}}\sum_{\i=1}^{n}Q_{i}.
\]

\end_inset

Then 
\begin_inset Formula 
\[
d_{\W}\left(n^{-1/2}\X,\N\left(0,1\right)\right)\le\frac{3}{\sqrt{n}}\E\left(\left|Q\right|^{3}\right).
\]

\end_inset


\end_layout

\begin_layout Proof
Fix 
\begin_inset Formula $f\in\cY$
\end_inset

.
\end_layout

\begin_layout Proof
We need to compare 
\begin_inset Formula 
\[
\E\left[\X f\left(\X\right)\right]=\E\left[\frac{1}{\sqrt{n}}\sum_{\i=1}^{n}Q_{\i}f\left(\X\right)\right]
\]

\end_inset

with 
\begin_inset Formula $\E f'\left(\X\right)$
\end_inset

.
 Define 
\begin_inset Formula $W_{\i}=\X-\frac{1}{\sqrt{n}}Q_{\i}$
\end_inset

, so 
\begin_inset Formula $W_{\i}$
\end_inset

 and 
\begin_inset Formula $Q_{\i}$
\end_inset

 are independent.
 For each 
\begin_inset Formula $\i$
\end_inset

, we then have 
\begin_inset Formula 
\[
\E\left[Q_{\i}f\left(\X\right)\right]=\E\left[Q_{\i}\left(f\left(\X\right)-f\left(W_{\i}\right)\right)\right]=\frac{1}{\sqrt{n}}\E\left[Q_{\i}^{2}f'\left(W_{\i}\right)\right]+\frac{1}{n}\E\left[Q_{\i}^{3}\frac{f''\left(E\right)}{2}\right]
\]

\end_inset

for some (random) 
\begin_inset Formula $E$
\end_inset

, by Taylor's theorem with the Lagrange form of the remainder (noting 
\begin_inset Formula $\X-W_{\i}=Q_{\i}$
\end_inset

).
\end_layout

\begin_layout Proof
Now, note that
\begin_inset Formula 
\[
\E\left[Q_{\i}^{2}f'\left(W_{\i}\right)\right]=\E Q_{\i}^{2}\E f'\left(W_{\i}\right)=\E f'\left(W_{\i}\right)=\E f'\left(\X\right)+\E\left[Q_{\i}f''\left(E'\right)\right]
\]

\end_inset

for some 
\begin_inset Formula $E'$
\end_inset

, again using the Lagrange form of the remainder.
 Now, by the bound on 
\begin_inset Formula $\left\Vert f''\right\Vert _{\infty}$
\end_inset

 in the definition of 
\begin_inset Formula $\cY$
\end_inset

, we have 
\begin_inset Formula 
\begin{alignat*}{1}
\E\left|Q_{\i}^{3}\frac{f''\left(E\right)}{2}\right| & \le\E\left|Q^{3}\right|,\\
\E\left|Q_{\i}f''\left(E'\right)\right| & \le2\E\left|Q\right|
\end{alignat*}

\end_inset

Hölder's inequality (see 
\begin_inset CommandInset citation
LatexCommand cite
after "Theorem 3.6 (1)"
key "Rud66"

\end_inset

) for the 
\begin_inset Formula $L^{3/2}$
\end_inset

 norm gives 
\begin_inset Formula 
\[
1=\E\left|Q^{2}\right|^{3/2}\le\left(\E\left|\left(Q^{2}\right)^{3/2}\right|^{2/3}\right)^{3/2}=\E\left|Q^{3}\right|,
\]

\end_inset

so another application of Hölder's inequality for the 
\begin_inset Formula $L^{3}$
\end_inset

 norm gives
\begin_inset Formula 
\[
\E\left|Q\right|\le\E\left|Q^{3}\right|^{1/3}\le\E\left|Q^{3}\right|.
\]

\end_inset

We conclude
\begin_inset Formula 
\begin{alignat*}{1}
\left|\E\left[\X f\left(\X\right)\right]-\E f'\left(\X\right)\right| & \le\left|\frac{1}{\sqrt{n}}\sum_{\i=1}^{n}\left(\E\left[Q_{\i}f\left(\X\right)\right]-\frac{1}{\sqrt{n}}\E\left[Q_{\i}^{2}f'\left(W_{\i}\right)\right]\right)\right|\\
 & \qquad+\left|\frac{1}{n}\sum_{\i=1}^{n}\left(\E\left[Q_{\i}^{2}f'\left(W_{\i}\right)\right]-\E f'\left(\X\right)\right)\right|\\
 & \le\frac{1}{\sqrt{n}}\E\left|Q^{3}\right|+\frac{2}{\sqrt{n}}\E\left|Q^{3}\right|
\end{alignat*}

\end_inset


\end_layout

